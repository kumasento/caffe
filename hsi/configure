sed -i -e 's/###@4###/$4/g' 1/run_me.m 2/create-train-val-list.sh 4/solver.prototxt 4/train-val.prototxt
sed -i -e 's/###@5###/$5/g' 1/run_me.m 2/create-train-val-list.sh 4/solver.prototxt 4/train-val.prototxt
sed -i -e 's/###@6###/$6/g' 1/run_me.m 2/create-train-val-list.sh 4/solver.prototxt 4/train-val.prototxt
